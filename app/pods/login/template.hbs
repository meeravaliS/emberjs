
<div class="login-box">
    <!-- /.login-logo -->
    <div class="login-box-body custom-box-bg">
        <p class="login-box-msg">Sign in to start your session</p>

        <form {{action 'authenticate' on='submit' }}>
            <div class="form-group has-feedback">
                {{input id='identification'type="test" id="inputEmail" class="form-control" placeholder="Username" required="" autofocus=""
                value=identification }}
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{input id='password' type='password' class="form-control" placeholder="Password" value=password}}
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-xs-12 pull-right">
                    <button class="btn btn-primary btn-block btn-flat" type="submit">Sign in</button>
                     {{#if errorMessage}}
                    <p style="color: red">{{errorMessage}}</p>
                    {{/if}}
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->